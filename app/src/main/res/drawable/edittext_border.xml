<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradasi warna untuk latar belakang -->
    <gradient
        android:startColor="@color/Azure"
        android:endColor="@color/white"
        android:angle="45" />

    <!-- Batas (stroke) untuk tampilan -->
    <stroke
        android:color="@color/Azure"
        android:width="1dp" />

    <!-- Radius untuk membuat sudut membulat -->
    <corners
        android:radius="12dp" />

    <!-- Padding di dalam elemen -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />

    <!-- Bayangan untuk elemen (hanya diaktifkan di Android 9 dan di bawahnya) -->
    <shadowColor
        android:color="@color/black" />

</shape>
